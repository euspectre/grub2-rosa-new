#!/bin/sh

#First try check EFI support
if [ -d /sys/firmware/efi ]; then
	if which grub2-efi-mkconfig >/dev/null 2>&1; then
		cmd=grub2-efi-mkconfig
	else
		cmd=grub2-mkconfig
	fi
	$cmd -o /boot/grub2/grub.cfg
	/bin/cp /boot/grub2/grub.cfg /boot/efi/EFI/rosa/grub.cfg
else
	grub2-mkconfig -o /boot/grub2/grub.cfg
fi

